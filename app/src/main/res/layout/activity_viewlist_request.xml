<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/FriendRequestText"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:paddingLeft="8dp"
        android:fontFamily="@font/abeezee"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textboxRequestWasSent"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/FriendRequestText"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/FriendRequestText"
        android:fontFamily="@font/abeezee"
        android:paddingLeft="8dp"
        android:shadowColor="@color/first"
        android:text="Your request has been sent"
        android:textAlignment="center"
        android:textColor="@color/fifth"
        android:textSize="5pt"
        android:textStyle="italic" />


</RelativeLayout>